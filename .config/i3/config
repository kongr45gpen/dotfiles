# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command /home/kongr45gpen/repos/bumblebee-status/bumblebee-status -m spaceapi nic disk:root sensors cpu memory brightness battery pasink dunst datetimetz datetime -p nic.states=^down -p root.path=/ datetimetz.timezone="America/New_York" datetime.format="%a, %b %d %Y %H:%M:%S" datetimetz.format="%H:%M ET" spaceapi.url="http://localhost/space.php" spaceapi.format="⚗️ %%state.open%open%closed%% (%%ext_people.count%%)" datetime.left-click="gsimplecal" -t solarized-powerline
        tray_output primary
        font pango:DejaVu Sans Mono 8
        colors {
                background $bg-color
                separator #757575
                #                  border               background         text
                focused_workspace  $selected-bord-color $inactive-bg-color $selected-text-color
                active_workspace   $selected-bord-color $inactive-bg-color $active-text-color
                inactive_workspace $inactive-bg-color   $inactive-bg-color $inactive-text-color
                urgent_workspace   $urgent-bg-color     $urgent-bg-color   $text-color
        }
}

